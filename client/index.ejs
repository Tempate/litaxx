    <section class="lobby-section">
        <div class="container">
            <div class="lobby-container">
                <h1 class="lobby-header">LOBBY</h1>

                <div class="lobby-cards">


                    <% for (const [code, room] of rooms.entries()) { %>
                    <div class="card">
                        <a href="game?gameId=<%= code %>">
                            <div class="card-body">
                                <h5 class="card-title">Anonymous vs Anonymous</h5>
                                <h6 class="card-subtitle mb-2 text-muted"><%= code %></h6>

                                <% if (room.getUserCount() == 1) { %>
                                <p class="card-text">Waiting for opponent</p>
                                <% } else if (room.getUserCount() == 2) { %>
                                <p class="card-text">On going game</p>
                                <% } else if (room.getUserCount() == 3) { %>
                                <p class="card-text">1 spectator</p>
                                <% } else if (room.getUserCount() > 3) { %>
                                <p class="card-text"> <%= room.getUserCount() - 2 %> spectators</p>
                                <% } %>

                            </div>
                        </a>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <script src="resources/js/gameIdValidator.js"></script>
